<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head') %>
</head>

<body>
    <header>
        <%- include('../../partials/header') %>
    </header>

    <main class="flex-center">
        <h2><%- albumname %></h2>
        <img id="album-art" src="<%- artwork %>" alt="<%- albumname %> cover">

        <% tracks.forEach(function(track) { %>
        <div style="background-color: rgb(<%- color %>);" class="flex-row">
            <p><%= track.track_number %>
            <p>
            <p><%= track.name %>
            <p>
                <i id="<%= track.track_number %>" class="las la-play-circle" onclick="togglePlay(this.id)"></i>
                <audio id="audio<%= track.track_number %>" style="background-color: rgb(<%- color %>);">
                    <source src="<%- track.preview_url %>" type="audio/mpeg">
                </audio>
        </div>
        <% }); %>
    </main>

    <footer>
        <%- include('../../partials/footer') %>
    </footer>

</body>

</html>
